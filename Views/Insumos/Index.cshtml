@model IEnumerable<WEBCOREBCC2021.Models.Dominio.Insumo>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.descricao)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.tipoinsumo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.quantidade)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.situacaoEstoque)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.valor)
            </th>

            <th>
                @*<th>Total</th>*@
                @Html.DisplayNameFor(model => model.total)
            </th>
            <th>Operações</th>
        </tr>
    </thead>
    <tbody>
        @{ float totalGeral = 0;}
        @foreach (var item in Model)
        {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.descricao)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.tipoinsumo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.quantidade)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.situacaoEstoque)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.valor)
            </td>
            <td>
                @*@{ float total = item.quantidade * item.valor;
                    totalGeral = totalGeral + total;
                 }
            <h5>@total</h5>*@

                @Html.DisplayFor(modelItem => item.total)
                @{
                    totalGeral = totalGeral + item.quantidade * item.valor;
                }
            </td>

            <td>
                <a asp-action="Edit" asp-route-id="@item.id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.id">Delete</a>
            </td>
        </tr>

        }
    </tbody>
</table>
<hr />
<h1>Total: R$@totalGeral.ToString("F2")</h1>